<Window x:Class="FeatureHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FeatureHub" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="#1d6d80"/>
            <Setter Property="Foreground" Value="#fdfefd"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e0443c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#242931">
            <Button x:Name="Feature1Button" Content="Feature 1" Click="Feature1Button_Click"/>
            <Button x:Name="Feature2Button" Content="Feature 2" Click="Feature2Button_Click"/>
            <Button x:Name="Feature3Button" Content="Feature 3" Click="Feature3Button_Click"/>
        </StackPanel>

        <Grid Grid.Column="1" x:Name="MainContent" Background="#fdfefd">
            <!-- Content for the main window will be loaded here -->
        </Grid>
    </Grid>
</Window>
